<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    tools:context=".ui.options.view.OptionsViewFragment">

    <Button
        android:id="@+id/btnUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/orange"
        android:clickable="false"
        android:padding="@dimen/size_10"
        android:text="@string/hint_name"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnNewClaim"
        android:layout_width="@dimen/size_300"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_50"
        android:clickable="false"
        android:backgroundTint="@color/purple"
        android:text="@string/new_claim"
        android:textColor="@color/light_gray"
        android:padding="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@id/btnUserName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="@dimen/size_300"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_50"
        android:backgroundTint="@color/orange"
        android:text="@string/list_bottom"
        android:textColor="@color/light_gray"
        android:padding="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@id/btnNewClaim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/tvLogOut"
        android:layout_width="@dimen/size_300"
        android:layout_height="@dimen/size_70"
        android:layout_marginTop="@dimen/size_50"
        android:backgroundTint="@color/red"
        android:text="@string/logout"
        android:textColor="@color/light_gray"
        android:padding="@dimen/size_10"
        app:layout_constraintTop_toBottomOf="@id/btnList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>